@page
@model WebApplication1.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Фільм за назвою</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Name" class="control-label">Назва</label>
                <input asp-for="Movie.Name" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Author" class="control-label">Сценарист</label>
                <input asp-for="Movie.Author" class="form-control" />
                <span asp-validation-for="Movie.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Style" class="control-label">Стиль</label>
                <input asp-for="Movie.Style" class="form-control" />
                <span asp-validation-for="Movie.Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Description" class="control-label">Опис</label>
                <input asp-for="Movie.Description" class="form-control" />
                <span asp-validation-for="Movie.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ShowList" class="control-label">Сеанси</label>
                <input asp-for="Movie.ShowList" class="form-control" />
                <span asp-validation-for="Movie.ShowList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Підтвердити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
